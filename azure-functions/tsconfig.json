{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "../src/*"]
    }
  },
  "include": ["src/**/*", "back-end/**/*", "util"]
}
