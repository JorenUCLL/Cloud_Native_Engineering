{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "repository/**/*",
    "service/**/*",
    "helpers/**/*",
    "mongo-models/**/*",
    "util/**/*",
    "types/**/*"
  ]
}
